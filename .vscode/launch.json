    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'filesystem-rs'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=filesystem-rs",
                    "--package=filesystem-rs"
                ],
                "filter": {
                    "name": "filesystem-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'filesystem-rs'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=filesystem-rs",
                    "--package=filesystem-rs"
                ],
                "filter": {
                    "name": "filesystem-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "list",
            "cargo": {
                "args": [
                    "build",
                    "--bin=list",
                    "--package=filesystem-rs"
                ],
                "filter": {
                    "name": "filesystem-rs",
                    "kind": "bin"
                }
            },
            "args": ["./src"],
            "cwd": "${workspaceFolder}"
        },

    ]
}